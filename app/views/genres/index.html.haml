.row
  #genres-sidebar.col-md-3
    %ul#sidebar.nav.nav-stacked.affix
      - @genres.each do |genre|
        %li
          = link_to "#{genre.genre_name}", user_genre_path(@user, genre), remote: true
  .col-md-9
    #genres-albums.packery

:coffee
  reloadPackery = ->
    container = document.querySelector(".packery")
    pckry = new Packery(container,
      columnWidth: 300
      gutter: 20
      isResizeBound: false
      transitionDuration: "0.8s"
    )

    $container = $(".packery")
    gutter = 20 or 0
    columnWidth = 320

    return

  jQuery ->
    $(this).bind "ajax:success", ->
      reloadPackery()